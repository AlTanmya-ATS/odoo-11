<odoo>
  <data>

      <!-- Inherit Form View to Modify it -->
      <record id="event_track_attendee_button" model="ir.ui.view">
          <field name="name">event.track</field>
          <field name="model">event.track</field>
          <field name="inherit_id" ref="website_event_track.view_event_track_form"/>
          <field name="arch" type="xml">
              <xpath expr="//header" position="inside">
                <button type="object" name="attendee_name" string="Get Attendee"/>
              </xpath>
              <xpath expr="/form/sheet/group[1]" position="after">
                 <field name="attendee_id" attrs="{}">
                    <tree string="track.attendee" create="false">
                      <field name="name" modifiers="{}"/>
                      <field name="partner_id"/>
                      <field name="email"/>
                      <field name="state"/>
                      <button name="confirm_registration" string="Confirm Registration" states="draft" type="object" icon="fa-check text-success"/>
                      <button name="button_reg_close" string="Attended the Event" states="open" type="object" icon="fa-level-down text-success"/>
                      <button name="button_reg_cancel" string="Cancel Registration" states="draft,open" type="object" icon="fa-times-circle text-danger"/>
                    </tree>
                 </field>
              </xpath>
              <xpath expr="//form[1]/sheet[1]/field[@name='attendee_id']/tree[1]" position="after">
                <form>
                   <sheet string="track.attendee">
                     <group>
                      <group name="Attendee">
                        <field name="partner_id"/>
                        <field name="name"/>
                        <field name="phone"/>
                        <field name="email"/>
                      </group>
                      <group name="Event Information">
                        <field name="event_id"/>
                        <field name="date_open"/>
                        <field name="state"/>
                      </group>
                     </group>
                   </sheet>
                </form>
              </xpath>
          </field>
      </record>
  </data>
</odoo>