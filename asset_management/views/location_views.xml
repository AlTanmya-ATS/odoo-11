<odoo>
    <data>
        <record model="ir.ui.view" id="asset_location_form_view">
            <field name="name">asset_location.form</field>
            <field name="model">asset_management.location</field>
            <field name="arch" type="xml">
                <form string="Asset Location">
                    <field name="name"/>
                </form>
            </field>
    </record>
    
    <record model="ir.ui.view" id="asset_location_tree_view">
	         <field name="name">asset_location.tree</field>
			 <field name="model">asset_management.location</field>
			 <field name="arch" type="xml">
			     <tree string="Asset Tree">
			         <field name="name"/>
				 </tree>
			 </field>
	</record>

    <record model="ir.ui.view" id="asset_location_search_view">
		     <field name="name">asset_location.search</field>
			 <field name="model">asset_management.location</field>
			 <field name="arch" type="xml">
			     <search>
				     <field name="name"/>
				 </search>
		     </field>
	</record>

    <record model="ir.actions.act_window" id="asset_location_list_action">
            <field name="name">Asset Location</field>
            <field name="res_model">asset_management.location</field>
            <field name="view_type">form</field>
            <field name="view_mode">tree,form</field>
            <field name="context" eval="{'search_default_my_asset': 1}"/>			
            <field name="help" type="html">
                <p class="oe_view_nocontent_create">Create the first asset
                </p>
            </field>
    </record>

    
    
    <menuitem id="location_menu" name="Location" parent="asset_management_menu"
                  action="asset_list_action"/>

    </data>
</odoo>