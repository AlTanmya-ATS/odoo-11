<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <record id="modify_dep_view_form" model="ir.ui.view">
        <field name="name">modify dep form view</field>
        <field name="model">asset_management.modify_dep</field>
        <field name="arch" type="xml">
            <form string="Modify Depreciation Method">
                <sheet>
                    <group>
                        <field name="book_id"/>
                        <field name="asset_id"/>
                        <field name="dep_method"/>
                        <field name="method_progress_factor" attrs="{'invisible':[('dep_method','!=','degressive')]}"/>
                        <field name="life_months"/>
                        <field name="method_time"/>
                        <field name="method_number" attrs="{'invisible':[('method_time','=','end')]}"/>
                        <field name="end_date" attrs="{'invisible':[('method_time','=','number')]}"/>
                    </group>
                </sheet>
            </form>
        </field>
    </record>

    <record id="modify_dep_action" model="ir.actions.act_window">
        <field name="name">modify_dep_action</field>
        <field name="type">ir.actions.act_window</field>
        <field name="res_model">asset_management.modify_dep</field>
        <field name="view_mode">tree,form</field>
        <field name="help" type="html">
          <p class="oe_view_nocontent_create">
          </p>
        </field>
    </record>
    <!-- This Menu Item must have a parent and an action -->
    <menuitem id="modify_dep_menu" name="Modify Depreciation Method" parent="menu_actions_on_asset"/>
    <menuitem id="modify_dep_method_menu" name="Modify Depreciation Method" parent="modify_dep_menu" action="modify_dep_action"/>

</odoo>